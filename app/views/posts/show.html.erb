<h3><%= @post.title %></h3>

<div>
  <p><%= @post.user.email %></p>
</div>

<div>
  <p><%= @post.body %></p>
</div>

<div>
  <% @comments.each do |comment| %>
    <p><%= comment.body %></p>
  <% end %>
</div>

<div>
  <%= render partial: 'comments/form', locals: { post: @post } %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
